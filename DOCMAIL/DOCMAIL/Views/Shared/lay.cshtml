<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/Styles/Style.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fondo_nav sticky-top">
        <div class="container-fluid d-flex align-items-center">
            <img src="~/Content/Styles/logo.png"
                 alt=""
                 width="150"
                 height="30"
                 class="mb-2 mt-2" />
            <div class="d-flex" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <button class="btn btn-outline-warning me-5 p-2" type="submit">
                            Generar Commercial Invoces desde SAP
                        </button>
                    </li>
                </ul>
            </div>
            <form action="@Url.Action("login", "Login")" method="post" style="display:inline;">
                <button type="submit" class="d-flex btn btn-outline-warning me-5">
                    Salir
                </button>
            </form>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
